<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>org.komlir.intelliJ-MLIR-plugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>MLIR</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/nirhal">nirhal</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    MLIR syntax highlighting support for IntelliJ IDEA. Provides syntax highlighting for Multi-Level Intermediate Representation (MLIR) files with .mlir extension.
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.clion</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Register MLIR file type -->
        <fileType name="MLIR"
                  implementationClass="org.komlir.intellijmlirplugin.MLIRFileType"
                  fieldName="INSTANCE"
                  language="MLIR"
                  extensions="mlir"/>

        <!-- Register syntax highlighter -->
        <lang.syntaxHighlighterFactory
                language="MLIR"
                implementationClass="org.komlir.intellijmlirplugin.MLIRSyntaxHighlighterFactory"/>

        <!-- Register parser definition -->
        <lang.parserDefinition
                language="MLIR"
                implementationClass="org.komlir.intellijmlirplugin.MLIRParserDefinition"/>

        <!-- Register brace matcher -->
        <lang.braceMatcher
                language="MLIR"
                implementationClass="org.komlir.intellijmlirplugin.MLIRBraceMatcher"/>

        <!-- Register color settings page -->
        <colorSettingsPage
                implementation="org.komlir.intellijmlirplugin.MLIRColorSettingsPage"/>

        <!-- Register commenter -->
        <lang.commenter
                language="MLIR"
                implementationClass="org.komlir.intellijmlirplugin.MLIRCommenter"/>

        <lang.findUsagesProvider
                language="MLIR"
                implementationClass="org.komlir.intellijmlirplugin.MLIRFindUsagesProvider" />

        <runLineMarkerContributor
                language="MLIR"
                implementationClass="org.komlir.intellijmlirplugin.MLIRRunLineMarkerContributor" />

        <configurationType
                implementation="org.komlir.intellijmlirplugin.run_configuration.MLIRRunConfigurationType"/>

        <runConfigurationProducer
                implementation="org.komlir.intellijmlirplugin.MLIRRunConfigurationProducer"/>


    </extensions>
</idea-plugin>
